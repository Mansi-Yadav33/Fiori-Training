<mvc:View
    controllerName="fragment.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <!-- <Button
				id="helloDialogButton"
				text="Good Evening!"
				press=".onOpenDialog"
				class="sapUiSmallMarginEnd"
			/> -->
            <Table
                id="productTable"
                items="{/Products}"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <ToolbarSpacer />
                            <Button
                                id="helloDialogButton"
                                text="Open Fragment"
                                press=".onOpenDialog"
                                class="sapUiSmallMarginEnd"
                            />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text
                            id="productID"
                            text="Product ID"
                        />
                    </Column>
                    <Column>
                        <Text text="Product Name" />
                    </Column>
                    <Column>
                        <Text text="Unit Price" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{ProductID}" />
                            <Text text="{ProductName}" />
                            <Text text="{UnitPrice}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
