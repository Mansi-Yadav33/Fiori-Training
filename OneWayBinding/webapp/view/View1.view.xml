<mvc:View controllerName="project2.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <Table
                id="productTable"
                items="{/Products}"
            >
                <columns>
                    <Column>
                        <Text
                            id="productID"
                            text="Product Name"
                        />
                    </Column>
                    <Column>
                        <Text text="Product Description" />
                    </Column>
                    <Column>
                        <Text text="Price" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{Name}" />
                            <Text text="{Description}" />
                            <Text text="{Price}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
